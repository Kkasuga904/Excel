{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "resolveJsonModule": true
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/taskpane", "src/client"]
}
