{
    "compilerOptions":  {
                            "jsx":  "react-jsx",
                            "module":  "ESNext",
                            "moduleResolution":  "node",
                            "outDir":  "./dist",
                            "forceConsistentCasingInFileNames":  true,
                            "esModuleInterop":  true,
                            "strict":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "rootDir":  "./src",
                            "declarationMap":  true,
                            "lib":  [
                                        "ES2020",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "types":  [
                                          "office-js"
                                      ],
                            "target":  "ES2020",
                            "declaration":  true,
                            "sourceMap":  true
                        },
    "include":  [
                    "src/**/*",
                    "tests/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ]
}
